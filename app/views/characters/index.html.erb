<h1>Listing characters</h1>

<table>
  <tr>
    <th>results</th>
    <th>x</th>
    <th>y</th>
    <th>Name</th>
    <th>Gender</th>
    <th>Culture</th>
    <th>Concept</th>
    <th>Kult</th>
    <th>Max ability points</th>
    <th>Mind</th>
    <th>Agility</th>
    <th>Body</th>
    <th>Charisma</th>
    <th>Psychic</th>
    <th>Luck</th>
    <th>Current life</th>
    <th>Max life</th>
    <th>Current mana</th>
    <th>Max mana</th>

    <th>Action points</th>
    <th>Trauma</th>
    <th>Poison health</th>
    <th>Mental health</th>
    <th>Culture</th>
    <th>Sub culture</th>
    <th>Concept</th>
    <th>User</th>
    <th>Current exp</th>
    <th>Next lev exp</th>
    <th>Level</th>
    <th>Chance to hit</th>
    <th>Chance of max damage</th>
    <th>Chance magic</th>
    <th>Win</th>
    <th>Lose</th>
    <th>char_type</th>
    <th>gold</th>
  </tr>

  <% for character in @characters %>
      <tr>
        <td> <%= render(:partial => 'characters/results', :locals=>{  :character => character}) %></td>
        <td><%= h character.coordinates.x %></td>
        <td><%= h character.coordinates.y %></td>
        <td><%= h character.name %></td>
        <td><%= h character.gender %></td>
        <td><%= h character.culture %></td>
        <td><%= h character.concept %></td>
        <td><%= h character.kult %></td>
        <td><%= h character.max_ability_points %></td>
        <td><%= h character.mind %></td>
        <td><%= h character.agility %></td>
        <td><%= h character.body %></td>
        <td><%= h character.charisma %></td>
        <td><%= h character.psychic %></td>
        <td><%= h character.luck %></td>
        <td><%= h character.current_life %></td>
        <td><%= h character.max_life %></td>
        <td><%= h character.current_mana %></td>
        <td><%= h character.max_mana %></td>
        
        <td><%= h character.action_points %></td>
        <td><%= h character.trauma %></td>
        <td><%= h character.poison_health %></td>
        <td><%= h character.mental_health %></td>
        <td><%= h character.culture_id %></td>
        <td><%= h character.sub_culture_id %></td>
        <td><%= h character.concept_id %></td>
        <td><%= h character.account_id %></td>
        <td><%= h character.current_exp %></td>
        <td><%= h character.next_lev_exp %></td>
        <td><%= h character.level %></td>
        <td><%= h character.chance_to_hit %></td>
        <td><%= h character.chance_of_max_damage %></td>
        <td><%= h character.chance_magic %></td>
        <td><%= h character.win %></td>
        <td><%= h character.lose %></td>
        <td><%= h character.char_type %></td>
        <td><%= h character.gold %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>

